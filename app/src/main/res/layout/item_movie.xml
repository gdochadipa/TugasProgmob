<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.google.android.material.card.MaterialCardView
        app:cardElevation="5dp"
        app:cardCornerRadius="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="12dp"
        android:layout_width="140dp"
        android:layout_height="210dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:src="@drawable/poster_infinity_war"
                android:id="@+id/poster_i"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="poster image" />
            <com.google.android.material.card.MaterialCardView
                android:layout_alignParentRight="true"
                android:layout_marginEnd="5dp"
                android:layout_marginTop="5dp"
                android:backgroundTint="#2d302d"
                app:cardCornerRadius="10dp"
                android:layout_width="wrap_content"
                android:layout_height="25dp">
                <LinearLayout
                    android:padding="3dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:src="@drawable/ic_star_yellow_24dp"
                        android:layout_width="20dp"
                        android:layout_height="20dp" />
                    <TextView
                        android:id="@+id/score_i"
                        android:textColor="@color/white"
                        android:fontFamily="@font/pro_sans_reg"
                        android:text="75"
                        android:textSize="12sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_alignParentBottom="true"
                android:background="#20000000"
                android:backgroundTint="#2d302d"
                android:layout_height="35dp">
                <RelativeLayout
                    android:layout_marginTop="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_centerHorizontal="true"
                        android:id="@+id/title_i"
                        android:textColor="@color/white"
                        android:fontFamily="@font/pro_sans_reg"
                        android:textSize="12sp"
                        android:text="Avengers : Infinity War"
                        android:textAlignment="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
            </com.google.android.material.card.MaterialCardView>
        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>

</LinearLayout>